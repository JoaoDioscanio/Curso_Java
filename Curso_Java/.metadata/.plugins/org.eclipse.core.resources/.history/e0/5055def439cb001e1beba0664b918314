package exercicios;

import java.util.Locale;
import java.util.Scanner;

import entidades.ContaBanco;

public class Ex_029 {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		// Aplicação do Cadastro
		ContaBanco holder;
		System.out.print("Enter account number: ");
		long tagAccount = sc.nextLong();
		System.out.print("Enter account holder: ");
		String nameHolder = sc.next();
		System.out.print("Is there an initial deposit (y/n)? ");
		char choice = sc.next().charAt(0);
		if (choice == 'y') {
			System.out.print("Enter initial deposit value: ");
			double initDeposit = sc.nextDouble();
			holder = new ContaBanco(tagAccount, nameHolder, initDeposit);
			System.out.printf("Account data:\nAccount %d, Holder: %s, Balance: $ %.2f\n",tagAccount, nameHolder, initDeposit);
		}
		else {
			holder = new ContaBanco(tagAccount, nameHolder);
			System.out.printf("Account data:\nAccount %d, Holder: %s, Balance: $ %.2f\n",tagAccount, nameHolder, holder.getSaldoTitular());
		}
		// Utilizar métodos de depósito e saque
		System.out.print("\nEnter a deposit value: ");
		double deposit = sc.nextDouble();
		holder.deposito(deposit);
		System.out.println(holder);
		
		System.out.print("\nEnter a withdraw value: ");
		double withdraw = sc.nextDouble();
		holder.saque(withdraw);
		System.out.println(holder);
		sc.close();
	}

}
